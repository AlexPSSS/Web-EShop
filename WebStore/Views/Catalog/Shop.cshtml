@model WebStore.Domain.Models.CatalogViewModel
@{
    ViewData["Title"] = "Shop";
}

<vc:bread-crumbs />

@await Html.PartialAsync("_Partial/_Advertisement")

<section>
    <div class="row">
        <div class="col-sm-3">
            @await Html.PartialAsync("_Partial/_LeftSideBar")
        </div>
        <div class="col-sm-9 padding-right">
            @await Html.PartialAsync("_Partial/_ProductItems", Model.Products)
            <paging page-model="@Model.PageViewModel"
                    page-action="Shop"
                    page-url-CategoryId="@Model.CategoryId"
                    page-url-BrandId="@Model.BrandId">
            </paging>
        </div>
    </div>
</section>