@model CatalogViewModel

@{
    ViewData["Title"] = "Shop";
}

<vc:bread-crumbs />

<partial name="_Partial/_Advertisement" />

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <partial name="_Partial/_LeftSideBar" />
            </div>

            <div id="catalog-items-container">
                <partial name="_Partial/_ProductItems" model="@Model.Products" />
            </div>

            <paging page-model="@Model.PageViewModel"
                    page-action="Shop"
                    page-url-CategoryId="@Model.CategoryId"
                    page-url-BrandId="@Model.BrandId">
            </paging>
        </div>
    </div>
</section>

@section Scripts
{
    <script src="~/lib/jquery-loading-overlay/loadingoverlay.min.js"></script>
    <script src="~/js/Shop/ProductItems.js" asp-append-version="true"></script>
    <script>
        $(function() {
            ProductItems.init({
                getUrl: "@Url.Action("GetFiltratedItems", "Catalog")"
            });
        })
    </script>
}
